@model System.Data.DataTable

@{
    ViewData["Title"] = "Recipes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Recipe
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["Title"]
                </td>
                <td>
                    @Model.Rows[i]["Recipe"]
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.Rows[i]["pkid"]">Edit</a> |
                    <a asp-action="Details" asp-route-id="@Model.Rows[i]["pkid"]">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["pkid"]">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>